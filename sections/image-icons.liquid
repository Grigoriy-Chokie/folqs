{% liquid
  assign grid_icon_count = 0
  assign image_icon_count = 0
  assign image_desktop = section.settings.image
  assign sizes = '(min-width: 750px) 50vw, 100vw'
  assign widths = '375, 550, 750, 1100, 1500, 1780, 1920'
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif

  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign padding_top_mobile = section.settings.padding_top_mobile
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile
%}

{% for block in section.blocks %}
  {% if block.type == 'grid-icon' and block.settings.text != blank and block.settings.icon != blank %}
    {% assign grid_icon_count = grid_icon_count | plus: 1 %}
  {% endif %}

   {% if block.type == 'image-icon' and block.settings.text != blank and block.settings.icon != blank %}
    {% assign image_icon_count = image_icon_count | plus: 1 %}
  {% endif %}
{% endfor %}

{{ 'component-image-icons.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings-v3',
  padding_top: padding_top,
  padding_bottom: padding_bottom,
  padding_top_mobile: padding_top_mobile,
  padding_bottom_mobile: padding_bottom_mobile
%}
<section class="image__icons section-{{ section.id }}--padding">
  {% if section.settings.bg_image_mobile != blank %}
    {{
      section.settings.bg_image_mobile
      | image_url: width: 990
      | image_tag:
        width: section.settings.bg_image_mobile.width,
        sizes: sizes,
        widths: '375, 550, 750, 990',
        fetchpriority: fetch_priority,
        alt: section.settings.bg_image_mobile.alt,
        class: "bg-image-mobile bg-image-c"
    }}
  {% endif %}
  {% if section.settings.bg_image != blank %}
    {{
      section.settings.bg_image
      | image_url: width: 3840
      | image_tag:
        width: section.settings.bg_image.width,
        sizes: sizes,
        widths: widths,
        fetchpriority: fetch_priority,
        alt: section.settings.bg_image.alt,
        class: "bg-image-desktop bg-image-c"
    }}
  {% endif %}
  <div class="c-container">
    {% if section.settings.heading != blank %}
      <h2 class="image__icons-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if grid_icon_count > 0 %}
      <div class="image__icons-grid">
        {% for block in section.blocks %}
          {% if block.type == 'grid-icon' and block.settings.text != blank %}
            <div class="image__icon-grid_item">
              {% if block.settings.icon != blank %}
                <img src="{{ block.settings.icon | image_url: width: 58, height: 58 }}" alt="{{ block.settings.icon.alt }}" width="58" height="58" loading="lazy">
              {% endif %}
              <span>{{ block.settings.text }}</span>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
    {% if section.settings.image != blank %}
      <div class="image__icons-image">
        {% if image_icon_count > 0 %}
          <div class="image__icons-wrapper">
            {% for block in section.blocks %}
              {% if block.type == 'image-icon' and block.settings.text != blank %}
                {% if block.settings.block_order_mobile != blank %}
                  <style>
                    @media screen and (max-width: 990px) {
                      #block-{{ block.id }}-{{ forloop.index }} {
                        order: {{ block.settings.block_order_mobile }};
                      }
                    }
                  </style>
                {% endif %}
                <div class="image__icons-item {% if block.settings.show_mobile == false %}hide-mobile{% endif %}" id="block-{{ block.id }}-{{ forloop.index }}">
                  {% if block.settings.icon != blank %}
                    <img src="{{ block.settings.icon | image_url: width: 16, height: 16 }}" alt="{{ block.settings.icon.alt }}" width="16" height="16" loading="lazy">
                  {% endif %}
                  <span>{{ block.settings.text }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
        {% if section.settings.image_mobile != blank %}
          {{
            section.settings.image_mobile
            | image_url: width: 990
            | image_tag:
              width: section.settings.image_mobile.width,
              sizes: sizes,
              widths: '375, 550, 750, 990',
              fetchpriority: fetch_priority,
              alt: section.settings.image_mobile.alt,
              class: "image mobile"
          }}
        {% endif %}
        {{
          section.settings.image
          | image_url: width: 1920
          | image_tag:
            width: section.settings.image.width,
            sizes: sizes,
            widths: widths,
            fetchpriority: fetch_priority,
            alt: section.settings.image.alt,
            class: "image"
        }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Image icons",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background image desktop"
      },
      {
        "type": "image_picker",
        "id": "bg_image_mobile",
        "label": "Background image mobile"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image desktop"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Image mobile"
      },
      {
        "type": "header",
        "content": "Paddings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "default": 120
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "default": 90
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "label": "Padding top mobile",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "default": 66
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "label": "Padding bottom mobile",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "default": 40
      }
    ],
    "blocks": [
      {
        "type": "grid-icon",
        "name": "Grid icon",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      },
      {
        "type": "image-icon",
        "name": "Image icon",
        "settings": [
          {
            "type": "checkbox",
            "id": "show_mobile",
            "label": "Show on mobile",
            "default": true
          },
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },          
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "number",
            "id": "block_order_mobile",
            "label": "Block order mobile"
          },
        ]
      }
    ],
    "presets": [
      {
        "name": "Image icons"
      }
    ]
  }
{% endschema %}
