{{ 'section-process-images.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings',
    padding_top: section.settings.padding_top,
    padding_bottom: section.settings.padding_bottom,
    padding_top_mobile: section.settings.padding_top_mobile,
    padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

{% style %}
    .section-{{ section.id }}--padding {
        --heading-font-family: 'Crimson Pro';
        --text-font-family: DM Sans;
    }
{% endstyle %}

<div class="process-images__content section-{{ section.id }}--padding">
  {% unless section.settings.title == blank %}
    <h2 class="process-images__title process-images__title--{{section.settings.heading_desktop_align}}">{{ section.settings.title }}</h2>
  {% endunless %}
  {% unless section.settings.subheading == blank %}
    <span class="process-images__sunheading">
      {{ section.settings.subheading }}
    </span>
  {% endunless %}
  {% if section.blocks.size > 0 %}
    <div class="process-images__blocks">
      {% for block in section.blocks %}
        {% unless block.settings.main_image == blank %}
          <div class="blocks__process-image-item">
            <div class="process-image-item__image-wrapper">
              {{
                block.settings.main_image
                | image_url: width: 2000
                | image_tag:
                  loading: 'lazy',
                  widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000',
                  class: 'process-image-item__main-image'
              }}
              {% unless block.settings.icon == blank %}
                {{
                  block.settings.icon
                  | image_url: width: 500
                  | image_tag:
                    loading: 'lazy',
                    widths: '50, 75, 100, 150, 200, 300, 400, 500',
                    class: 'process-image-item__icon'
                }}
              {% endunless %}
            </div>
            <div class="process-image-item__text-wrapper">
              {% unless block.settings.title == blank %}
                <h5 class="process-image-item__title">
                  {{ block.settings.title }}
                </h5>
              {% endunless %}
              {% unless block.settings.description == blank %}
                <span class="process-image-item__description">
                  {{ block.settings.description }}
                </span>
              {% endunless %}
            </div>
          </div>
        {% endunless %}
      {% endfor %}
    </div>
  {% endif %}
</div>
{% schema %}
{
  "name": "Process images",
  "tag": "section",
  "class": "section__process-images",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "label": "Title",
      "id": "title",
      "default": "Research Studies"
    },
    {
      "type": "select",
      "label": "Heading desktop align",
      "id": "heading_desktop_align",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        }
      ]
    },
    {
      "type": "richtext",
      "label": "Subheading",
      "id": "subheading"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image block",
      "limit": 4,
      "settings": [
        {
          "type": "richtext",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "richtext",
          "label": "Description",
          "id": "description"
        },
        {
          "type": "image_picker",
          "label": "Main image",
          "id": "main_image"
        },
        {
          "type": "image_picker",
          "label": "Icon",
          "id": "icon",
          "info": "Small picture on the bottom of the main one. With blue circle as ground."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Process images",
      "category": "Custom",
    }
  ]
}
{% endschema %}
