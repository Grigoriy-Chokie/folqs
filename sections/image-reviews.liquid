{{ 'section-image-reviews.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

<div class="page-width section-{{ section.id }}--padding image-reviews-wrapper">
  <div class="image-reviews">
    {%- if section.settings.subheading != blank
      and section.settings.heading != blank
      and section.settings.text_under_heading != blank
    -%}
      <div class="image-reviews__heading">
        {%- unless section.settings.subheading == blank -%}
          <p class="image-reviews__subtitle" style="color: {{section.settings.subheading_color }}">
            {{ section.settings.subheading }}
          </p>
        {%- endunless -%}
        {%- unless section.settings.heading == blank -%}
          <{{ section.settings.title_tag }} class="image-reviews__title">
            {{ section.settings.heading }}
          </{{ section.settings.title_tag }}>
        {%- endunless -%}
        {%- unless section.settings.text_under_heading == blank -%}
          <div class="image-reviews__text-under-title">
            {{ section.settings.text_under_heading }}
          </div>
        {%- endunless -%}
      </div>
    {%- endif -%}
    {%- if section.blocks.size > 0 -%}
      <div class="image-reviews__reviews-grid">
        {%- for block in section.blocks -%}
          <div class="image-reviews__image-review">
            {%- unless block.settings.image == blank -%}
              <div class="image-review__image-wrapper">
                <div class="image-review__image">
                  {{ block.settings.image | image_url: width: 400 | image_tag }}
                </div>
              </div>
            {%- endunless -%}
            <div class="image-review__info">
              <div class="image-review__author">
                {%- unless block.settings.photo == blank -%}
                  <div class="image-review__author-photo">
                    {{ block.settings.photo | image_url: width: 50 | image_tag }}
                  </div>
                {%- endunless -%}
                {{ block.settings.author_name }}
              </div>
              {%- unless block.settings.service_logo == blank -%}
                <div class="image-review__service-logo">
                  {{ block.settings.service_logo | image_url: height: 15 | image_tag }}
                </div>
              {%- endunless -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
    <div class="image-reviews__cta-buttons" style="--primary-color: #D9024D">
      <a href="{{ section.settings.cta_url }}" class="image-reviews__cta-button button button--primary">
        <span>
          {{ section.settings.cta_text }}
        </span>
        {%- render 'icon-arrow-right' -%}
      </a>
      {%- unless section.settings.guarantee_text == blank -%}
        <p class="image-reviews__guarantee">
          {%- render 'icon-shield-tick' -%}
          <span class="image-reviews__guarantee-desktop">{{ section.settings.guarantee_text }}</span>
          {%- unless section.settings.guarantee_text_mobile == blank -%}
            <span class="image-reviews__guarantee-mobile">{{ section.settings.guarantee_text_mobile }}</span>
          {%- endunless -%}
        </p>
      {%- endunless -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image reviews",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Think You Need Melatonin?"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#005EB8"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "These Sleep Scores Say Otherwise."
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
      "default": "h2"
    },
    {
      "type": "richtext",
      "id": "text_under_heading",
      "label": "Text under heading",
      "default": "<p>See How Folqs Customers Are Sleeping Better â€”</p><p>Without Added Melatonin or Next-Day Grogginess*</p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Try it Risk-Free"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL"
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "label": "Guarantee text",
      "default": "90-Day Sleep Guarantee: Better Sleep or Your Money Back."
    },
    {
      "type": "text",
      "id": "guarantee_text_mobile",
      "label": "Guarantee text (mobile)",
      "default": "90-Day Sleep Guarantee"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Review",
      "type": "review",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Author photo"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Alex S."
        },
        {
          "type": "image_picker",
          "id": "service_logo",
          "label": "Service logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image reviews"
    }
  ]
}
{% endschema %}
