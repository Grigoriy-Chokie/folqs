{%- liquid
    assign padding_top = section.settings.padding_top | append: 'px'
    assign padding_bottom = section.settings.padding_bottom | append: 'px'
    assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
    assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'

    assign heading = section.settings.heading
    assign subtitle = section.settings.subtitle
    assign heading_mobile = section.settings.heading_mobile
    assign instagram_name = section.settings.instagram_name
    assign link_to_instagram = section.settings.link_to_instagram
    assign icon = section.settings.icon
    assign desktop_space_between = section.settings.desktop_space_between
    assign mobile_space_between = section.settings.mobile_space_between
    assign slider_autoplay = section.settings.slider_autoplay

    assign has_blocks = false
    if section.blocks.size != 0
        assign has_blocks = true
    endif
-%}
{% if has_blocks == true %}
    {%- style -%}
        .instagram-feed--{{ section.id }} {
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
        }
        @media(max-width: 768px) {
            .instagram-feed--{{ section.id }} {
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }
    {%- endstyle -%}
    {{ 'instagram-feed.css' | asset_url | stylesheet_tag }}
    <div class="instagram-feed instagram-feed--{{ section.id }}">
        <div class="instagram-feed__container page-width">
            {%- if heading != blank or subtitle != blank or heading_mobile != blank -%}
                <div class="instagram-feed__header">
                    {%- if heading != blank or heading_mobile != blank -%}
                        <div class="instagram-feed__title">{{- heading -}}</div>
                    {%- endif -%}
                    {%- if heading_mobile != blank -%}
                        <div class="instagram-feed__title--mobile">{{- heading_mobile -}}</div>
                    {%- endif -%}
                    {%- if instagram_name != blank and link_to_instagram != blank -%}
                        <div class="instagram-feed__subtitle">
                            <a href="{{ link_to_instagram }}" target="_blank">
                                {%- if icon != blank -%}
                                    {{ icon | image_url: width: 500 | image_tag: loading: 'lazy' }}
                                {%- endif -%}
                                {{- instagram_name -}}
                            </a>
                        </div>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="instagram-feed__content"
                 data-desktop-space-between="{{ desktop_space_between }}"
                 data-mobile-space-between="{{ mobile_space_between }}"
                 data-autoplay="{{ slider_autoplay }}">
                <div class="swiper-wrapper">
                    {%- for block in section.blocks -%}
                        {%- liquid
                            assign image = block.settings.image
                            assign link_to_post = block.settings.link_to_post
                        -%}
                        {%- if image != blank -%}
                            <div class="instagram-feed__image swiper-slide">
                                {% if link_to_post != blank %}<a href="{{- link_to_post -}}" target="_blank">{%- endif -%}
                                    {{ image | image_url: width: 500 | image_tag: loading: 'lazy' }}
                                {%- if link_to_post != blank -%}</a>{%- endif -%}
                            </div>
                        {%- endif -%}
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
    <script src="{{ 'instagram-feed.js' | asset_url }}"></script>
{% endif %}


{% schema %}
{
  "name": "Instagram feed",
  "limit": 1,
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link_to_post",
          "label": "Link to post"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Padding (desktop)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 100
    },
    {
      "type": "header",
      "content": "Padding (desktop)"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "url",
      "id": "link_to_instagram",
      "label": "Link to Instagram"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>#folqs_nutrition<p>"
    },
    {
      "type": "richtext",
      "id": "heading_mobile",
      "label": "Heading mobile",
      "default": "<p>#folqs_nutrition</p>"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "instagram_name",
      "label": "Instagram name",
      "default": "@folqs"
    },
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
      "type": "range",
      "id": "desktop_space_between",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Slide space between(desktop)",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_space_between",
      "min": 0,
      "max": 50,
      "step": 1,
      "label": "Slide space between(mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "slider_autoplay",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Autoplay",
      "default": 0,
      "info": "To activate the slider autoplay, the slider handle should not display the zero digit."
    }
  ],
  "presets": [
    {
      "name": "Instagram feed"
    }
  ]
}
{% endschema %}
