{{ 'section-highlighted-cards-grid.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

{%- style -%}
  .highlighted-cards-grid--{{ section.id }} {
    --hcg-background: {{ section.settings.background_color | default: '#ffffff' }};
    --hcg-text-align: {{ section.settings.text_align | default: 'center' }};

    --hcg-subheading-color: {{ section.settings.subheading_color | default: '#0b63b9' }};
    --hcg-subheading-size: {{ section.settings.subheading_size | default: 18 }}px;
    --hcg-subheading-size-mobile: {{ section.settings.subheading_size_mobile | default: section.settings.subheading_size | default: 18 }}px;
    --hcg-subheading-bg: {{ section.settings.subheading_background | default: 'transparent' }};

    --hcg-heading-color: {{ section.settings.heading_color | default: '#0f172a' }};
    --hcg-heading-size: {{ section.settings.heading_size | default: 52 }}px;
    --hcg-heading-size-mobile: {{ section.settings.heading_size_mobile | default: section.settings.heading_size | default: 52 }}px;
    --hcg-heading-bg: {{ section.settings.heading_background | default: 'transparent' }};

    --hcg-footer-color: {{ section.settings.footer_color | default: '#0f172a' }};
    --hcg-footer-size: {{ section.settings.footer_size | default: 16 }}px;
    --hcg-footer-size-mobile: {{ section.settings.footer_size_mobile | default: section.settings.footer_size | default: 16 }}px;
    --hcg-footer-bg: {{ section.settings.footer_background | default: 'transparent' }};
  }

  {%- if section.settings.background_image_desktop != blank -%}
    .highlighted-cards-grid--{{ section.id }} {
      background-image: url('{{ section.settings.background_image_desktop | image_url: width: 2400 }}');
    }
  {%- endif -%}

  @media screen and (max-width: 749px) {
    {%- if section.settings.background_image_mobile != blank -%}
      .highlighted-cards-grid--{{ section.id }} {
        background-image: url('{{ section.settings.background_image_mobile | image_url: width: 1400 }}');
      }
    {%- elsif section.settings.background_image_desktop != blank -%}
      .highlighted-cards-grid--{{ section.id }} {
        background-image: url('{{ section.settings.background_image_desktop | image_url: width: 1400 }}');
      }
    {%- endif -%}
  }
{%- endstyle -%}

{%- if section.settings.subheading != blank
  or section.settings.heading != blank
  or section.settings.footer_text != blank
  or section.blocks.size > 0
-%}
  <section class="highlighted-cards-grid highlighted-cards-grid--{{ section.id }} section-{{ section.id }}--padding">
    <div class="page-width">
      <div class="highlighted-cards-grid__header">
        {%- if section.settings.subheading != blank -%}
          <p class="highlighted-cards-grid__subheading">
            <span>{{ section.settings.subheading }}</span>
          </p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="highlighted-cards-grid__heading">
            <span>{{ section.settings.heading }}</span>
          </h2>
        {%- endif -%}

        {%- if section.settings.footer_text != blank -%}
          <p class="highlighted-cards-grid__footer">
            <span>{{ section.settings.footer_text }}</span>
          </p>
        {%- endif -%}
      </div>

      {%- if section.blocks.size > 0 -%}
        <div class="highlighted-cards-grid__grid">
          {%- for block in section.blocks -%}
            {% liquid
              assign card_bg = block.settings.card_background | default: '#ffffff'
              assign card_title_color = block.settings.card_title_color | default: '#eb001b'
              assign card_text_color = block.settings.card_text_color | default: '#0f172a'
              assign card_footer_color = block.settings.card_footer_color | default: '#15a100'
            %}

            {% capture card_styles %}
              --hcg-card-bg: {{ card_bg }};
              --hcg-card-title-color: {{ card_title_color }};
              --hcg-card-title-size: {{ block.settings.card_title_size | default: 20 }}px;
              --hcg-card-title-size-mobile: {{ block.settings.card_title_size_mobile | default: block.settings.card_title_size | default: 20 }}px;
              --hcg-card-text-color: {{ card_text_color }};
              --hcg-card-text-size: {{ block.settings.card_text_size | default: 18 }}px;
              --hcg-card-text-size-mobile: {{ block.settings.card_text_size_mobile | default: block.settings.card_text_size | default: 18 }}px;
              --hcg-card-footer-color: {{ card_footer_color }};
              --hcg-card-footer-size: {{ block.settings.card_footer_size | default: 18 }}px;
              --hcg-card-footer-size-mobile: {{ block.settings.card_footer_size_mobile | default: block.settings.card_footer_size | default: 18 }}px;
            {% endcapture %}

            <div class="highlighted-cards-grid__card" style="{{ card_styles | strip | strip_newlines }}" {{ block.shopify_attributes }}>
              {%- if block.settings.card_title != blank -%}
                <div class="highlighted-cards-grid__card-title">
                  {%- if block.settings.show_icon -%}
                    <span class="highlighted-cards-grid__card-icon">
                      {%- render 'icon-error' -%}
                    </span>
                  {%- endif -%}
                  <span>{{ block.settings.card_title }}</span>
                </div>
              {%- endif -%}

              {%- if block.settings.card_text != blank -%}
                <div class="highlighted-cards-grid__card-text">
                  {{ block.settings.card_text }}
                </div>
              {%- endif -%}

              {%- if block.settings.card_footer_text != blank -%}
                <div class="highlighted-cards-grid__card-footer">
                  {{ block.settings.card_footer_text }}
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </section>
{%- endif -%}

