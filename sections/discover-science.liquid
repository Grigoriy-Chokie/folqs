{{ 'section-discover-science.css' | asset_url | stylesheet_tag }}
{%- style -%}
  {% unless section.settings.ground_image == blank%}
    .science__wrapper--{{ section.id }} {
      background-image: url('{{section.settings.ground_image | image_url}}');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
    }
    {%- unless section.settings.ground_image_mobile ==blank -%}
      @media (max-width:768px) {
        .science__wrapper--{{ section.id }} {
          background-image: url({{ section.settings.ground_image_mobile | image_url }});
        }
      {%- endunless -%}
    }
  {% endunless %}
    .science__wrapper--{{ section.id }} {
      margin-top: {{ section.settings.padding_top_mobile }}px;
      margin-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    @media screen and (min-width: 850px) {
      .science__wrapper--{{ section.id }} {
        margin-top: {{ section.settings.padding_top }}px;
        margin-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}
<div class="science__ground science__wrapper--{{ section.id }}">
  <div class="science__content page-width">
    {% unless section.settings.heading == blank %}
      <div class="science__text-wrapper">
        {% unless section.settings.heading == blank %}
          <div class="science__heading">
            <div class="science__heading {% unless section.settings.heading_mobile == blank %}science__heading--desktop{% endunless %}">
              {{ section.settings.heading }}
            </div>
            {% unless section.settings.heading_mobile == blank %}
              <div class="science__heading science__heading--mobile">{{ section.settings.heading_mobile }}</div>
            {% endunless %}
          </div>
        {% endunless %}
        {% unless section.settings.subheading == blank %}
          <span class="science__subheading {% if section.settings.is_subheading_hidden %}science__subheading--hidden {% endif %}">
            {{- section.settings.subheading -}}
          </span>
        {% endunless %}
      </div>
    {% endunless %}
    {% unless section.blocks.size == 0 %}
      <div class="science__percentage-wrapper">
        {% for block in section.blocks %}
          <div class="science__percentage-item">
            {% unless block.settings.percentage == blank %}
              <p class="percentage-item__percentage">
                <span class="percentage-item__percentage-amount" data-amount="{{block.settings.percentage }}">0</span>
                <span class="percentage--small">%</span>
              </p>
            {% endunless %}
            {% unless block.settings.description == blank %}
              <div class="percentage-item__description {% unless block.settings.description_mobile == blank %} percentage-item__description--with-mobile {% endunless %}">
                <span class="percentage-item__description--desktop">
                  {{ block.settings.description }}
                </span>
                {% unless block.settings.description_mobile == blank %}
                  <span class="percentage-item__description--mobile">
                    {{ block.settings.description_mobile }}
                  </span>
                {% endunless %}
              </div>
            {% endunless %}
          </div>
        {% endfor %}
      </div>
    {% endunless %}
  </div>
</div>

