{% schema %}
{
  "name": "Discover the Science",
  "tag": "section",
  "class": "section__science",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "label": "Heading",
      "id": "heading"
    },
    {
      "type": "richtext",
      "label": "Heading mobile",
      "id": "heading_mobile"
    },
    {
      "type": "richtext",
      "label": "Subheading",
      "id": "subheading"
    },
    {
      "type": "checkbox",
      "label": "Hide subheading on mobie",
      "id": "is_subheading_hidden"
    },
    {
      "type": "image_picker",
      "label": "Ground image",
      "id": "ground_image"
    },
    {
      "type": "image_picker",
      "label": "Ground image mobile",
      "id": "ground_image_mobile"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "percentage_item",
      "name": "Percentage item",
      "limit": 4,
      "settings": [
        {
          "type": "number",
          "label": "Percentage",
          "id": "percentage",
          "default": 87
        },
        {
          "type": "richtext",
          "label": "Description",
          "id": "description"
        },
        {
          "type": "richtext",
          "label": "Description mobile",
          "id": "description_mobile"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Discover the Science"
    }
  ]
}
{% endschema %}
