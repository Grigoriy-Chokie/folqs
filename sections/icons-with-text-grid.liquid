{{ 'section-icons-with-text-grid.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

{%- if section.settings.text != blank or section.blocks.size > 0 -%}
  <div class="icons-with-text-grid-wrapper color-{{ section.settings.color_scheme }}">
    <div class="icons-with-text-grid page-width page-width--extra section-{{ section.id }}--padding">
      {%- unless section.settings.text == blank -%}
        <h2 class="icons-with-text-grid__text {% if section.settings.text_auto_width != false %}auto{% endif %}">{{ section.settings.text }}</h2>
      {%- endunless -%}
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {% if block.settings.cta_icon != blank %}
            <div class="icons-with-text-grid__cta-icon">
              {{ block.settings.cta_icon }}
            </div>
          {% elsif block.settings.icon != blank %}
            <div class="icons-with-text-grid__icon">
              {{ block.settings.icon | image_url: width: 100 | image_tag }}
            </div>
          {% endif %}
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Icons with text grid",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Folqs is everything you need for a healthy lifestyle"
    },
    {
      "type": "checkbox",
      "id": "text_auto_width",
      "label": "Text Auto Width",
      "default": false
    },
    {
      "type": "header",
      "content": "Section paddings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 22
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 70
    }
  ],
  "blocks": [
    {
      "name": "Icon",
      "type": "icon",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "cta_icon",
          "label": "CTA Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icons with text grid"
    }
  ]
}
{% endschema %}
