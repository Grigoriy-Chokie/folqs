{%- if section.settings.title != blank
  or section.settings.subtitle != blank
  or section.blocks.size > 0
-%}
  <section class="for-everyone-cards for-everyone-cards--{{ section.id }} for-everyone-cards--mobile-{{ section.settings.mobile_order }} section-{{ section.id }}--padding">
    {%- if section.settings.background_image_desktop != blank or section.settings.background_image_mobile != blank -%}
      <div class="for-everyone-cards__bg" aria-hidden="true"></div>
    {%- endif -%}

    {%- if section.settings.decor_left_image != blank -%}
      <div class="for-everyone-cards__decor for-everyone-cards__decor--left {% if section.settings.decor_left_hide_mobile %}for-everyone-cards__decor--hide-mobile{% endif %}" aria-hidden="true">
        <picture>
          {%- if section.settings.decor_left_image_mobile != blank -%}
            <source media="(max-width: 749px)" srcset="{{ section.settings.decor_left_image_mobile | image_url: width: 900 }}">
          {%- endif -%}
          {{ section.settings.decor_left_image | image_url: width: 1400 | image_tag: loading: 'lazy', alt: section.settings.decor_left_image.alt }}
        </picture>
      </div>
    {%- endif -%}

    {%- if section.settings.decor_right_image != blank -%}
      <div class="for-everyone-cards__decor for-everyone-cards__decor--right {% if section.settings.decor_right_hide_mobile %}for-everyone-cards__decor--hide-mobile{% endif %}" aria-hidden="true">
        <picture>
          {%- if section.settings.decor_right_image_mobile != blank -%}
            <source media="(max-width: 749px)" srcset="{{ section.settings.decor_right_image_mobile | image_url: width: 900 }}">
          {%- endif -%}
          {{ section.settings.decor_right_image | image_url: width: 1400 | image_tag: loading: 'lazy', alt: section.settings.decor_right_image.alt }}
        </picture>
      </div>
    {%- endif -%}

    <div class="for-everyone-cards__inner page-width">
      {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
        <div class="for-everyone-cards__header">
          {%- if section.settings.title != blank -%}
            <h2 class="for-everyone-cards__title">{{ section.settings.title }}</h2>
          {%- endif -%}
          {%- if section.settings.subtitle != blank -%}
            <div class="for-everyone-cards__subtitle">
              {{ section.settings.subtitle }}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div class="for-everyone-cards__cards">
        <div class="for-everyone-cards__card for-everyone-cards__card--left" style="{{ left_card_styles | strip | strip_newlines }}">
          {%- if section.settings.left_label != blank or section.settings.left_show_icon -%}
            <div class="for-everyone-cards__card-head">
              {%- if section.settings.left_show_icon -%}
                <span class="for-everyone-cards__card-icon">
                  {%- if section.settings.left_icon != blank -%}
                    {{ section.settings.left_icon | image_url: width: 120 | image_tag: loading: 'lazy', alt: section.settings.left_icon.alt }}
                  {%- else -%}
                    {%- render 'icon-close' -%}
                  {%- endif -%}
                </span>
              {%- endif -%}
              {%- if section.settings.left_label != blank -%}
                <span class="for-everyone-cards__card-label">{{ section.settings.left_label }}</span>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if section.blocks.size > 0 -%}
            <ul class="for-everyone-cards__list">
              {%- for block in section.blocks -%}
                {%- if block.type == 'item' and block.settings.card == 'left' and block.settings.text != blank -%}
                  <li {{ block.shopify_attributes }}>{{ block.settings.text }}</li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>

        <div class="for-everyone-cards__card for-everyone-cards__card--right" style="{{ right_card_styles | strip | strip_newlines }}">
          {%- if section.settings.right_label != blank or section.settings.right_show_icon -%}
            <div class="for-everyone-cards__card-head">
              {%- if section.settings.right_show_icon -%}
                <span class="for-everyone-cards__card-icon">
                  {%- if section.settings.right_icon != blank -%}
                    {{ section.settings.right_icon | image_url: width: 120 | image_tag: loading: 'lazy', alt: section.settings.right_icon.alt }}
                  {%- else -%}
                    {%- render 'icon-checkmark' -%}
                  {%- endif -%}
                </span>
              {%- endif -%}
              {%- if section.settings.right_label != blank -%}
                <span class="for-everyone-cards__card-label">{{ section.settings.right_label }}</span>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if section.blocks.size > 0 -%}
            <ul class="for-everyone-cards__list">
              {%- for block in section.blocks -%}
                {%- if block.type == 'item' and block.settings.card == 'right' and block.settings.text != blank -%}
                  <li {{ block.shopify_attributes }}>{{ block.settings.text }}</li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
    </div>
  </section>
{%- endif -%}

