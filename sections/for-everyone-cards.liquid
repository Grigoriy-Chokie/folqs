    --fec-title-color: {{ section.settings.title_color | default: '#0f172a' }};
    --fec-title-size: {{ section.settings.title_size | default: 40 }}px;
    --fec-title-size-mobile: {{ section.settings.title_size_mobile | default: 30 }}px;

    --fec-subtitle-color: {{ section.settings.subtitle_color | default: '#475569' }};
    --fec-subtitle-size: {{ section.settings.subtitle_size | default: 18 }}px;
    --fec-subtitle-size-mobile: {{ section.settings.subtitle_size_mobile | default: 16 }}px;
    --fec-subtitle-gap: {{ section.settings.subtitle_gap | default: 14 }}px;

    --fec-cards-gap: {{ section.settings.cards_gap | default: 32 }}px;
    --fec-cards-gap-mobile: {{ section.settings.cards_gap_mobile | default: 20 }}px;
    --fec-cards-width: {{ section.settings.cards_width | default: 1100 }}px;

    --fec-bg-image-opacity: {{ section.settings.background_image_opacity | default: 100 }};

    --fec-decor-left-top: {{ section.settings.decor_left_top | default: 40 }}px;
    --fec-decor-left-left: {{ section.settings.decor_left_left | default: -80 }}px;
    --fec-decor-left-width: {{ section.settings.decor_left_width | default: 260 }}px;
    --fec-decor-left-opacity: {{ section.settings.decor_left_opacity | default: 100 }};

    --fec-decor-right-top: {{ section.settings.decor_right_top | default: 10 }}px;
    --fec-decor-right-right: {{ section.settings.decor_right_right | default: -80 }}px;
    --fec-decor-right-width: {{ section.settings.decor_right_width | default: 320 }}px;
    --fec-decor-right-opacity: {{ section.settings.decor_right_opacity | default: 100 }};

    --fec-decor-left-top-mobile: {{ section.settings.decor_left_top_mobile | default: 10 }}px;
    --fec-decor-left-left-mobile: {{ section.settings.decor_left_left_mobile | default: -40 }}px;
