{{ 'section-article-content-time-steps.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}


{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-main-color: {{ section.settings.section_main_color.rgb | split: ' ' | join: ',' }};
    --title-color: {{ section.settings.title_color }};
    --title-highlight-color: {{ section.settings.title_highlight_color }};
  }
  
{%- endstyle -%}

<div class="page-width section-{{ section.id }}--padding">
  <div class="time-steps">
    {%- unless section.settings.title == blank -%}
      <{{section.settings.title_tag}} class="time-steps__title">
        {{ section.settings.title }}
      </{{section.settings.title_tag}}>
    {%- endunless -%}
    {%- unless section.settings.subtitle == blank -%}
      <p class="time-steps__subtitle">{{ section.settings.subtitle }}</p>
    {%- endunless -%}
    {%- if section.blocks.size > 0 -%}
      <div class="time-steps__steps">
        {%- for block in section.blocks -%}
          <div class="time-steps__time-step">
            <div class="time-step__icon">
              <span>
                {%- render 'icon-clock-large' -%}
              </span>
            </div>
            <div class="time-step__card">
              {%- unless block.settings.time == blank -%}
                <span class="time-step__time">
                  {{ block.settings.time }}            
                </span>
              {%- endunless -%}
              {%- unless block.settings.title == blank -%}
                <p class="time-step__title">{{ block.settings.title }}</p>
              {%- endunless -%}
              {%- unless block.settings.subtitle == blank -%}
                <p class="time-step__subtitle">{{ block.settings.subtitle }}</p>
              {%- endunless -%}
              {%- unless block.settings.advantages_list == blank -%}
                <div class="time-step__advantages">
                  {{ block.settings.advantages_list }}                  
                </div>
              {%- endunless -%}
            </div>
          </div>        
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

<script src="{{ 'section-article-content-time-steps.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Article time steps",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section id"
    },
    {
      "type": "checkbox",
      "id": "is_section_first",
      "label": "Is section first?",
      "default": false
    },
    {
      "type": "color",
      "id": "section_main_color",
      "label": "Section main color",
      "default": "#01BD0E"
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Title</p>",
      "info": "Make a text bold to hightlight"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
      "default": "h2"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "title_highlight_color",
      "label": "Title highlight color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Subtitle"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 60
    }
  ],
  "blocks": [
    {
      "name": "Time step",
      "type": "time_step",
      "settings": [
        {
          "type": "text",
          "id": "time",
          "label": "Time",
          "default": "1 Week"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "subtitle"
        },
        {
          "type": "richtext",
          "id": "advantages_list",
          "label": "Advantages list"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Article content (Time Steps)",
      "settings": {}
    }
  ]
}
{% endschema %}
