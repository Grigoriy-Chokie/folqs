{{ 'section-quiz-results.css' | asset_url | stylesheet_tag }}
{% style %}
  .quiz-results__content-wrapper--{{ section.id }} {
    padding-top: calc({{ section.settings.padding_top_mobile }}px + var(--header-height));;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  {% unless section.settings.ground == blank %}
    .quiz-results__content-wrapper--{{ section.id }}{
        background: {{ section.settings.ground }};
    }
  {% endunless %}

  @media screen and (min-width: 769px) {
    .quiz-results__content-wrapper--{{ section.id }} {
      padding-top: calc({{ section.settings.padding_top }}px + var(--header-height));
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
<div class="quiz-results__content-wrapper quiz-results__content-wrapper--{{ section.id }}">
  <div class="quiz-results__content page-width">
    {% unless section.settings.heading == blank %}
      <h3 class="quiz-results__heading">
        {{ section.settings.heading }}
      </h3>
    {% endunless %}
    {% unless section.settings.subheading == blank %}
      <span class="quiz-results__subheading">
        {{ section.settings.subheading }}
      </span>
    {% endunless %}
    {% if section.blocks.size > 0 %}
      <div class="quiz-results__results">
        {% for block in section.blocks %}
          <div class="results__result-item">
            <div class="result-item__rate">
              {% for index in (1..3) %}
                <div class="result-item__rate-item"> </div>
              {% endfor %}
            </div>
            <div class="result-item__text">
              {% unless block.settings.heading == blank %}
                <h5 class="result-item__heading">
                  {{ block.settings.heading }}
                </h5>
              {% endunless %}
              {% unless block.settings.subheading == blank %}
                <span class="result-item__subheading">
                  {{ block.settings.subheading }}
                </span>
              {% endunless %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{{ 'section-quiz-results.js' | asset_url | script_tag }}
{% schema %}
{
  "name": "Quiz results",
  "tag": "section",
  "class": "section__quiz-results",
  "limit": 1,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "label": "Heading",
      "id": "heading",
      "default": "<p>Snapshot of Your Health Condition</p>"
    },
    {
      "type": "richtext",
      "label": "Subheading",
      "id": "subheading",
      "default": "<p>Lorem ipsum dolor sit amet consectetur. In ac elementum suspendisse viverra dui nisi. Sit elit id tellus id iaculis volutpat lorem. Vel a id justo diam. Cursus magna mauris nulla id metus.</p>"
    },
    {
      "type": "color_background",
      "label": "Ground",
      "id": "ground",
      "default": "linear-gradient(0deg, rgba(228, 240, 255, 0.00) 0%, #E4F0FF 48.5%)"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "paragraph",
      "content": "Desktop"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "rate_item",
      "name": "Rate item",
      "settings": [
        {
          "type": "text",
          "label": "Heading",
          "id": "heading",
          "default": "Energy"
        },
        {
          "type": "richtext",
          "label": "Subheading",
          "id": "subheading",
          "default": "<p>Lorem ipsum dolor sit amet consectetur. Viverra viverra accumsan vel suspendisse nunc sed. At sed faucibus faucibus at. Id eros sollicitudin proin etiam dignissim non sed in.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Quiz results"
    }
  ]
}
{% endschema %}
