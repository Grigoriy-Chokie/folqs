{{ 'section-landing-testimonials.css' | asset_url | stylesheet_tag }}

{% liquid
  assign padding_desktop_top = section.settings.padding_top
  assign padding_desktop_bottom = section.settings.padding_bottom
  assign padding_top_mobile = section.settings.padding_top_mobile
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
  assign stars_image = section.settings.stars_image
  assign review_text = section.settings.review_text
%}
{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ padding_desktop_top }}px;
    padding-bottom: {{ padding_desktop_bottom }}px;
  }

  @media(max-width: 768px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ padding_top_mobile }}px;
      padding-bottom: {{ padding_bottom_mobile }}px;
    }
  }
{%- endstyle -%}

<div class="landing-testimonials__wrapper {% if template.name == 'index' -%}landing-testimonials--new-home-page{%- endif %}">
  {% if title != blank %}
    <div class="landing-testimonials__title">{{ title }}</div>
  {% endif %}
  {% if subtitle != blank %}
    <p class="landing-testimonials__subtitle">{{ subtitle }}</p>
  {% endif %}
  {%- if stars_image != blank and review_text != blank -%}
    <div class="landing-testimonials__reviews-line">
      {% render 'picture',
        image: stars_image,
        widths_list: '50, 100, 200, 350,800, 1200, 1500, 1900, 2100, 2400, 2800, 3200',
        loading: 'lazy',
        fetchpriority: 'low',
        class: 'landing-testimonials__reviews-line-image'
      %}
      <span class="landing-testimonials__reviews-line-text">{{ review_text }}</span>
    </div>
  {%- endif -%}

  <ul class="image-group list-unstyled">
    {% for block in section.blocks %}
      {% if block.type == 'testimonial_images' %}
        {% liquid
          assign ratio_percent = '100'
          if block.settings.ratio == 'adapt'
            assign ratio_percent = 1 | divided_by: block.settings.image_1.aspect_ratio | times: 100
          endif
        %}
        {% for i in (1..6) %}
          {% liquid
            assign image_id = 'image_' | append: i
            assign image = block.settings[image_id]
          %}

          {% if image != blank %}
            <li class="image-group__item">
              <div class="image-group__picture" style="--ratio-percent: {{ ratio_percent | append: '%' }}">
                {% render 'picture',
                  image: image,
                  widths_list: '350, 500, 800, 1200, 1500',
                  loading: 'lazy',
                  fetchpriority: 'low',
                  image_alt: image.alt
                %}
              </div>
            </li>
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  </ul>

  <ul class="testimonials list-unstyled">
    {% for block in section.blocks %}
      {% if block.type == 'testimonial' %}
        {% liquid
          assign heading = block.settings.heading
          assign content = block.settings.content
          assign author = block.settings.author
        %}
        <li class="testimonials__item">
          <div class="testimonial">
            <div class="testimonial__stars">
              {%- if template.name == 'index' -%}
                {{ 'icon-stars-new.svg' | inline_asset_content }}
              {%- else -%}
                {{ 'icon-lp-testimonials-stars.svg' | inline_asset_content }}
              {%- endif -%}
            </div>

            {% if heading != blank %}
              <h3 class="testimonial__heading">{{ heading }}</h3>
            {% endif %}
            {% if content != blank %}
              <p class="testimonial__content">{{ content }}</p>
            {% endif %}
            {% if author != blank %}
              <div class="testimonial__author-content">
                <h4 class="testimonial__author">{{ author }}</h4>
                <div class="testimonial__verified-badge">
                  {{ 'icon-lp-verified-buyer.svg' | inline_asset_content }}
                  <p class="testimonial__verified-text">Verified buyer</p>
                </div>
              </div>
            {% endif %}
          </div>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

