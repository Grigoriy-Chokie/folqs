{{ 'section-faq-with-image.css' | asset_url | stylesheet_tag }}

{% liquid
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
  assign image = section.settings.image
  assign decor_image_desktop = section.settings.decor_image_desktop
  assign tagline = section.settings.tagline
  assign v3_styles = section.settings.enable_v3_styles

  assign heading_font_family = section.settings.heading_font_family
  assign text_font_family = section.settings.text_font_family
%}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

{% style %}
  #shopify-section-{{ section.id }} .faq-image__wrapper {
    background: {{ section.settings.current_background }};
    --active-title-color: {{ section.settings.active_title_color }};
    --default-title-color: {{ section.settings.default_title_color }};
    --top-padding: {{ section.settings.padding_top | append: 'px'}};
  }

  #shopify-section-{{ section.id }} {
    background: {{ section.settings.previous_background }};
  }

  {% if template.suffix == 'referrals' %}
    #shopify-section-{{ section.id }}{
      --font-heading-family: var(--font-dm-sans);
      --font-body-family: var(--font-dm-sans);
    }
  {% endif %}
{% endstyle %}


<div
  class="faq-image__wrapper{% if section.settings.extra_styles %} faq-image__wrapper--extra{% endif %} faq-image--{{ template.suffix | default: template.name }} {% if section.settings.rounded %}faq-image__wrapper--rounded{% endif %}{% if v3_styles == true %} faq-image__wrapper-v3{% endif %}"
  style="--heading-font-family: 'Crimson Pro'; --text-font-family: Raleway;"
>
  <div class="faq-image__decor-image-container">
    {%- if decor_image_desktop != blank -%}
      {{ decor_image_desktop | image_url: width: 360 | image_tag: class: 'faq-image__decor-image--desktop' }}
    {%- endif -%}
  </div>
  <div class="faq-image__container page-width{% if section.settings.extra_styles %} page-width--extra{% endif %} section-{{ section.id }}--padding">
    {% unless subtitle == blank %}
      <p class="faq-image__subtitle">{{ subtitle }}</p>
    {% endunless %}
    {% unless title == blank %}
      <h2 class="faq-image__title">{{ title }}</h2>
    {% endunless %}
    {% unless tagline == blank %}
      <span class="faq-image__tagline">
        {{ tagline }}
      </span>
    {% endunless %}
    <div class="faq-image__content faq-image__content--image-{{ section.settings.image_position }}">
      <faq-items
        class="faq-image__items-container faq-items-container"
        data-is-only-one-opened="{{ section.settings.is_only_one_opened }}"
      >
        {%- for block in section.blocks -%}
          <div class="faq-item {% if forloop.first and section.settings.is_first_open %}faq-item--active{% endif %}">
            <p class="faq-item__question">
              {{ block.settings.title | escape }}
              <span class="faq-item__icon">
                {%- if section.settings.extra_styles -%}
                  {%- render 'icon-plus-extra' -%}
                  {%- render 'icon-minus-extra' -%}
                {%- else -%}
                  {% render 'icon-plus' %}
                  {% render 'icon-minus' %}
                {%- endif -%}
                </span>
            </p>
            <div class="faq-item__answer-wrapper">
              <div class="faq-item__answer rte">{{ block.settings.answer }}</div>
            </div>
          </div>
        {%- endfor -%}
      </faq-items>
      <div class="faq-image__image-container {% if section.settings.hide_image_mobile != false %}faq-image__image-container--mobile{% endif %}">
        {%- if image != blank -%}
          {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) 880px, (min-width: 990px) calc(50.0vw - 10rem), (min-width: 750px) 100vw
          {%- endcapture -%}
          {{
            image
            | image_url: width: 880
            | image_tag: loading: 'lazy', sizes: sizes, widths: '246, 493, 600, 713, 823, 990, 1100, 1206'
          }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<script src="{{ 'faq-items.js' | asset_url }}" defer></script>

