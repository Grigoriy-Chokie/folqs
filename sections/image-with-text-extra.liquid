{{ 'section-image-with-text-extra.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

{%- if section.settings.image != blank or section.settings.title != blank or section.settings.text != blank -%}
  <div
    class="image-with-text-extra-wrapper color-{{ section.settings.color_scheme }} section-{{ section.id }}--padding"
    style="--gradient-background:{{ section.settings.gradient_background }}"
  >
    <div
      class="page-width page-width--extra image-with-text-extra image-with-text-extra--image-{{ section.settings.image_position }}"
    >
      {%- unless section.settings.image_background == blank -%}
        <div 
          class="image-with-text-extra__background-image {% if section.settings.custom_background_position != false %}image-with-text-extra__background-image--position{% endif %}"
          style="{% if section.settings.custom_background_position != false %}
          --position-x: {{ section.settings.position_x }};
          --position-y: {{ section.settings.position_y }};
          --position-x-mobile: {{ section.settings.position_x_mobile }};
          --position-y-mobile: {{ section.settings.position_y_mobile }};
          {% endif %}"
        >
          {{ section.settings.image_background | image_url: width: 900 | image_tag }}
        </div>
      {%- endunless -%}
      {%- unless section.settings.image == blank -%}
        <div 
          class="image-with-text-extra__image {% if section.settings.custom_max_height != blank %}image-with-text-extra__image--max-height{% endif %}"
          {% if section.settings.custom_max_height != blank %}style="--max-height: {{ section.settings.custom_max_height }}px;"{% endif %}
          >
          {{ section.settings.image | image_url: width: 800 | image_tag }}
        </div>
      {%- endunless -%}
      <div class="image-with-text-extra__content">
        {%- unless section.settings.title == blank -%}
          <h2 class="image-with-text-extra__title">
            {{ section.settings.title | newline_to_br }}
          </h2>
        {%- endunless -%}
        {%- unless section.settings.text == blank -%}
          <div
            class="image-with-text-extra__text"
            style="--color-hightlight:{{ section.settings.highlight_color.rgb }};"
          >
            {{ section.settings.text }}
          </div>
        {%- endunless -%}
      </div>
    </div>
    {% for block in section.blocks %}
      {%- if block.settings.button_text != blank or block.settings.show_rating -%}
        <div class="page-width page-width--extra reviews-block__cta-block">
          {%- unless block.settings.button_text == blank -%}
            <a href="{{ block.settings.button_url }}" class="cta-block__button button">
              <span class="button__text">
                {{ block.settings.button_text }}
              </span>
              {% unless block.settings.button_text_mobile == blank %}
                <span class="button__text-mobile">
                  {{ block.settings.button_text_mobile }}
                </span>
              {% endunless %}
              {%- render 'icon-cta-arrow' -%}
            </a>
          {%- endunless -%}
          {%- if block.settings.show_rating -%}
            <div class="image-with-text-list__rating-block">
              {%- unless block.settings.rating_image == blank -%}
                <div class="rating-block__image">
                  {{ block.settings.rating_image | image_url: height: 60 | image_tag }}
                </div>
              {%- endunless -%}
              <div class="rating-block__stars">{%- render 'icon-rating-extra' -%}</div>
              {%- unless block.settings.rating_text == blank -%}
                <p class="rating-block__text">{{ block.settings.rating_text }}</p>
                <p class="rating-block__text--mobile">{{ block.settings.rating_text_mobile | default: "over 1,571 Reviews" }}</p>
              {%- endunless -%}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    {% endfor %}
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Image with text Extra",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "color_background",
      "id": "gradient_background",
      "label": "Gradient background"
    },
    {
      "type": "image_picker",
      "id": "image_background",
      "label": "Image background"
    },
    {
      "type": "checkbox",
      "id": "custom_background_position",
      "label": "Custom Image Background position",
      "default": false
    },
    {
      "type": "header",
      "content": "Desktop",
      "visible_if": "{{ section.settings.custom_background_position != false }}"
    },
    {
      "type": "text",
      "id": "position_x",
      "label": "Position X",
      "visible_if": "{{ section.settings.custom_background_position != false }}"
    },
    {
      "type": "text",
      "id": "position_y",
      "label": "Position Y",
      "visible_if": "{{ section.settings.custom_background_position != false }}"
    },
    {
      "type": "header",
      "content": "Mobile",
       "visible_if": "{{ section.settings.custom_background_position != false }}"
    },
    {
      "type": "text",
      "id": "position_x_mobile",
      "label": "Position X",
      "visible_if": "{{ section.settings.custom_background_position != false }}"
    },
    {
      "type": "text",
      "id": "position_y_mobile",
      "label": "Position Y",
      "visible_if": "{{ section.settings.custom_background_position != false }}"
    },
    {
      "type": "text",
      "id": "custom_max_height",
      "label": "Custom Max Height"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Reason"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Text</p>",
      "info": "Make text bold to highlight"
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Hihlight color",
      "default": "#FF6A13"
    },
    {
      "type": "header",
      "content": "Section paddings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 70
    }
  ],
  "blocks": [
    {
      "name": "Reviews",
      "type": "reviews",
      "settings": [
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Try Folqs Today"
        },
        {
          "type": "text",
          "id": "button_text_mobile",
          "label": "Button text mobile",
          "default": "Try Folqs Today"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "header",
          "content": "Rating"
        },
        {
          "type": "checkbox",
          "id": "show_rating",
          "label": "Show rating",
          "default": false
        },
        {
          "type": "image_picker",
          "id": "rating_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "rating_text",
          "label": "Text",
          "default": "over 25,254 Five Star Reviews"
        },
        {
          "type": "text",
          "id": "rating_text_mobile",
          "label": "Text(mobile)",
          "default": "over 1,571 Five Star Reviews"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text Extra"
    }
  ]
}
{% endschema %}
