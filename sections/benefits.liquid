{%- liquid
  assign padding_top = section.settings.padding_top | append: 'px'
  assign padding_bottom = section.settings.padding_bottom | append: 'px'
  assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
  if section.blocks.size != 0
    assign has_blocks = true 
  else
    assign has_blocks = false 
  endif
-%}
{%- style -%}
    .benefit--{{section.id}} {
        padding-top: {{padding_top}};
        padding-bottom: {{padding_bottom}};
    }
    @media(max-width: 768px) {
        .benefit--{{section.id}} {
            padding-top: {{padding_top_mobile}};
            padding-bottom: {{padding_bottom_mobile}};
        }
    }
{%- endstyle -%}
{% if has_blocks == true %}
{{ 'component-benefit.css' | asset_url | stylesheet_tag }}

<div class="shopify-section-benefits page-width">
  <div class="benefits benefit--{{section.id}}">
    <sticky-benefit-nav class="benefits__nav ">
      {%- for block in section.blocks -%}
        <a class="benefits__nav-item {% if forloop.index0 == 0 %}benefits__nav-item--active{% endif %}" href="#benefit-{{forloop.index}}">
            {{block.settings.title}}
        </a>
      {%- endfor -%}
    </sticky-benefit-nav>
    <div class="benefits__wrapper">
      {%- for block in section.blocks -%}
        {%- liquid
          assign image = block.settings.image
          assign image_mobile = block.settings.image 
          if block.settings.image_mobile
            assign image_mobile = block.settings.image_mobile
          endif
          assign show_client_info = block.settings.show_client_info
          assign name = block.settings.name
          assign age = block.settings.age

          assign title = block.settings.title
          assign description = block.settings.description
          assign title_list = block.settings.title_list
          assign expectations = block.settings.expectations |  replace: '<p>','' | split: '</p>'
          
          assign more_name = block.settings.more_name
          assign more_link = block.settings.more_link
        -%}
        <div class="benefits__item" id="benefit-{{forloop.index}}">
          <div class="benefits__item-container benefits-item">
            {% if image != blank %}        
              <div class="benefits-item__picture">
                {{
                  image | image_url: width: master | image_tag: widths: '500,600,700,800,900,1000',
                  loading: 'lazy',
                  class:"benefits-item__picture--desktop",
                  alt: image.alt | default: "Benefit"
                }}  
                {{
                  image_mobile | image_url: width: master | image_tag: widths: '500,600,700,800,900,1000',
                  loading: 'lazy',
                  class:"benefits-item__picture--mobile",
                  alt: image_mobile.alt | default: "Benefit"
                }}  
              </div>
            {% endif %}
            {% if show_client_info %}
              <div class="benefits-item__badge">
                <span class="benefits-item__badge-name">{{name}}</span>
                <span class="benefits-item__badge-age">{{age}}</span>
              </div>
            {% endif %}
          </div>
          <div class="benefits__descriptions">
            {% if title != blank %}
              <h2 class="benefits__title">{{title}}</h2> 
            {% endif %}
            {% if description %}
              <p class="benefits__details">{{description}}</p>
            {% endif %}
            <div class="benefits__expectations">
              {% if title_list != blank %}
                <h4  class="benefits__expectations__title">{{title_list}}</h4>
              {% endif %}

              {% if expectations.size != 0 %}
                <ul class="benefits__expectation-list expectation-list">
                  {% for expectation in expectations %}
                    <li class="expectation-list__item">
                      <span class="expectation-list__item-marker">
                        {% render 'icon-check' %}
                      </span>
                      {{expectation}}
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>

            {% if more_name != blank %}
              <a href="{{ more_link }}" class="benefits__more-btn">
                {{ more_name}}
                {%- render "icon-arrow-right" -%}
              </a>
            {% endif %}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div> 
{{ "component-benefit.js" | asset_url | script_tag }}
{% endif %}

{% schema %}
  {
    "name": "Benefits",
    "tag": "section",
    "settings": [
      {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Padding top",
          "default": 96
      },
      {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Padding bottom",
          "default": 96
      },
      {
          "type": "range",
          "id": "padding_top_mobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Padding top mobile",
          "default": 45
      },
      {
          "type": "range",
          "id": "padding_bottom_mobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Padding bottom mobile",
          "default": 45
      }
    ],
    "blocks": [
      {
        "type": "benefit",
        "name": "Benefit",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Section title"
          },
          {
            "type": "inline_richtext",
            "id": "description",
            "label": "Description"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Picture(desktop)"
          },
          {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Picture(mobile)"
          },
          {
            "type": "text",
            "id": "title_list",
            "label": "Title for list of expectations",
            "default": "What to Expect"
          },
          {
            "type": "richtext",
            "id": "expectations",
            "label": "Expectations",
            "info": "Provide multiple expctation in new lines"
          },
          {
            "type": "text",
            "id": "more_name",
            "label": "Name for the button",
            "default": "Learn More"
          },
          {
            "type": "url",
            "id": "more_link",
            "label": "Learn more link"
          },
          {
            "type": "header",
            "content": "Client info"
          },
          {
            "type": "checkbox",
            "id": "show_client_info",
            "label": "Show Client info",
            "default": true
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "text",
            "id": "age",
            "label": "Age",
            "default": "90 y.o."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Benefits"
      }
    ]
  }
  {% endschema %}
  