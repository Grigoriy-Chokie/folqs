{{ 'section-article-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
    {% if section.settings.is_section_first %}
      body {
        --article-sidebar-top-position: {{ section.settings.padding_top }}px;
      }
    {% endif %}
  #shopify-section-{{section.id }}{
    --title-color: {{ section.settings.title_color }};
    --title-highlight-color: {{ section.settings.title_highlight_color }};
    --section-background: rgba({{ section.settings.backround.rgb | split: ' ' | join: ',' }},.05);
  }
{%- endstyle -%}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

<div class="page-width section-{{ section.id }}--padding article-content-wrapper">
  <div id="{{ section.settings.section_id }}" class="article-content {% if section.settings.backround != blank and section.settings.add_background %}article-content--with-background{% endif %}">
    {%- unless section.settings.image == blank -%}
      <div class="article-content__image-wrapper">
        <div class="article-content__image article-content__image--{{ section.settings.image_aspect_ratio }}">
          {{ section.settings.image | image_url: width: 750 | image_tag }}
        </div>
      </div>
    {%- endunless -%}
    {%- unless section.settings.title == blank -%}
      <{{ section.settings.title_tag }} class="article-content__title">
        {{ section.settings.title }}
      </{{ section.settings.title_tag }}>
    {%- endunless -%}
    {%- unless section.settings.content == blank -%}
      <div class="article-content__content">
        {{ section.settings.content }}
      </div>
    {%- endunless -%}
    {%- if section.blocks.size > 0 -%}
      <div class="article-content__content-blocks-list{% if section.settings.make_content_gap_larger %} article-content__content-blocks-list--large-gap{% endif %}">
        {%- for block in section.blocks -%}
          <div class="article-content__article-content-block{% if block.settings.add_background and block.settings.background != blank %} article-content__article-content-block--with-background{% endif %}{% if block.settings.block_underlined %} article-content__article-content-block--underlined{% endif %}" 
          style="
            --title-color: {{ block.settings.title_color }};
            --title-underline-color: {{ block.settings.title_underline_color }};
            --subtitle-color: {{ block.settings.subtitle_color }};
            --block-underline-color: {{ block.settings.block_underline_color }};
            --block-background: rgba({{ block.settings.background.rgb  | split: ' ' | join: ',' }},.05);
          ">
            {%- if block.settings.title != blank or block.settings.subtitle != blank -%}
              <div class="article-content-block__heading">
                {%- unless block.settings.title == blank -%}
                  <{{ block.settings.title_tag }} class="article-content-block__title{% if block.settings.title_underlined %} article-content-block__title--underlined{% endif %}">
                    {{ block.settings.title }}
                  </{{ block.settings.title_tag }}>
                {%- endunless -%}
                {%- unless block.settings.subtitle == blank -%}
                  <p class="article-content-block__subtitle">{{ block.settings.subtitle }}</p>
                {%- endunless -%}
              </div>
            {%- endif -%}
            {%- unless block.settings.content == blank -%}
              <div class="artice-content-block__content">
                {{ block.settings.content }}
              </div>
            {%- endunless -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Article content",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section id"
    },
    {
      "type": "checkbox",
      "id": "is_section_first",
      "label": "Is section first?",
      "default": false
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        {
          "value": "standart",
          "label": "4/3"
        },
        {
          "value": "square",
          "label": "1/1"
        },
        {
          "value": "auto",
          "label": "auto"
        }
      ],
      "default": "standart"
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Title</p>",
      "info": "Make a text bold to hightlight"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
      "default": "h2"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "title_highlight_color",
      "label": "Title highlight color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Section settings"
    },
    {
      "type": "checkbox",
      "id": "make_content_gap_larger",
      "label": "Make content between blocks and heading larger",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "add_background",
      "label": "Add background to section",
      "default": false
    },
    {
      "type": "color",
      "id": "backround",
      "label": "Background"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Content",
      "type": "content",
      "settings": [
        {
          "type": "header",
          "content": "Title"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "select",
          "id": "title_tag",
          "label": "Title tag",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "H3"
            },
            {
              "value": "h4",
              "label": "H4"
            },
            {
              "value": "h5",
              "label": "H5"
            },
            {
              "value": "h6",
              "label": "H6"
            }
          ],
          "default": "h3"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title color",
          "default": "#000000"
        },
        {
          "type": "checkbox",
          "id": "title_underlined",
          "label": "Underlined",
          "default": false
        },
        {
          "type": "color",
          "id": "title_underline_color",
          "label": "Underline color",
          "default": "#005EB8"
        },
        {
          "type": "header",
          "content": "Subtitle"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "color",
          "id": "subtitle_color",
          "label": "Subtitle color",
          "default": "#000000"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "header",
          "content": "Block settings"
        },
        {
          "type": "checkbox",
          "id": "add_background",
          "label": "Add background",
          "default": false
        },
        {
          "type": "color",
          "id": "background",
          "label": "Backround"
        },
        {
          "type": "checkbox",
          "id": "block_underlined",
          "label": "Block underlined",
          "default": false
        },
        {
          "type": "color",
          "id": "block_underline_color",
          "label": "Block underline color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Article content"
    }
  ]
}
{% endschema %}
