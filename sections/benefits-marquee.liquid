{{- 'benefits-marquee.css' | asset_url | stylesheet_tag -}}

{% style %}
    .benefits-marquee__section{
    background: {{ section.settings.background }};
    }

    .marque--{{ section.id }} {
    margin-top: {{ section.settings.padding_top }}px;
    margin-bottom: {{ section.settings.padding_bottom }}px;
    }

    @media (max-width: 768px) {
    .marque--{{ section.id }} {
    margin-top: {{ section.settings.padding_top_mobile }}px;
    margin-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
    }
{% endstyle %}

<div class="benefits-marquee benefits-marquee--{{ template.suffix | default: template.name }} marque--{{ section.id }} page-width">
    <div data-autoscroll="{{ section.settings.autoscroll }}" class="benefits-marquee__slider swiper">
        <div class="benefits-marquee__wrapper swiper-wrapper">
            {%- for block in section.blocks -%}
                {% if block.settings.text != blank %}
                    <div class="benefits-marquee__text swiper-slide" style="--color-text: {{ section.settings.color_text }};">
                        {%- if section.settings.decor_label != blank -%}
                            {{ section.settings.decor_label }}
                        {%- endif -%}
                        <p>{{ block.settings.text }}</p>
                    </div>
                {% endif %}
            {%- endfor -%}
        </div>
    </div>
</div>

{{- 'benefits-marquee.js' | asset_url | script_tag -}}

{% schema %}
{
  "name": "Benefits Marquee",
  "class": "benefits-marquee__section",
  "limit": 1,
  "settings": [
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "#005EB8"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "Color text",
      "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "autoscroll",
      "label": "Auto scroll on mobile",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 21
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 79
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "html",
      "id": "decor_label",
      "label": "Decor for text label"
    }
  ],
  "blocks": [
    {
      "type": "text_label",
      "name": "Text label",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Benefits Marquee"
    }
  ]
}
{% endschema %}