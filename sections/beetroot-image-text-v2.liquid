{% unless section.settings.image == blank %}
  {{ 'section-beetroot-image-with-text-v2.css' | asset_url | stylesheet_tag }}

  {% render 'section-paddings',
    padding_top: section.settings.padding_top,
    padding_bottom: section.settings.padding_bottom,
    padding_top_mobile: section.settings.padding_top_mobile,
    padding_bottom_mobile: section.settings.padding_bottom_mobile
  %}

  <div
    class="section-{{ section.id }}--padding beetroot-image-with-text-v2-wrapper"
    style="background: {{ section.settings.background }};"
  >
    <div class="beetroot-image-with-text-v2 beetroot-image-with-text-v2--image-{{ section.settings.image_position }} page-width">
      {%- if section.settings.add_icon -%}
        <div class="beetroot-image-with-text-v2__frontground-icon">
          {%- render 'icon-image-with-text-front' -%}
        </div>
      {%- endif -%}
      <div class="beetroot-image-with-text-v2__image-wrapper">
        {%- unless section.settings.image == blank -%}
          <div class="beetroot-image-with-text-v2__image">
            {{ section.settings.image | image_url: width: 750 | image_tag }}
          </div>
        {%- endunless -%}
      </div>
      <div class="beetroot-image-with-text-v2__blocks">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'title' -%}
              {%- unless block.settings.text == blank -%}
                <p class="beetroot-image-with-text-v2__title">{{ block.settings.text }}</p>
              {%- endunless -%}
            {%- when 'text' -%}
              {%- unless block.settings.text == blank -%}
                <div class="beetroot-image-with-text-v2__text">
                  {{ block.settings.text }}
                </div>
              {%- endunless -%}
            {%- when 'steps' -%}
              {%- unless block.settings.first_step == blank -%}
                <div
                  class="beetroot-image-with-text-v2__steps"
                  style="--accent-color: {{ block.settings.accent_color }};"
                >
                  <div class="beetroot-image-with-text-v2__step">
                    <span> 1 </span>
                    <div class="step__text">
                      {{ block.settings.first_step }}
                    </div>
                  </div>
                  {%- unless block.settings.second_step == blank -%}
                    <div class="beetroot-image-with-text-v2__step">
                      <span> 2 </span>
                      <div class="step__text">
                        {{ block.settings.second_step }}
                      </div>
                    </div>
                    {%- unless block.settings.third_step == blank -%}
                      <div class="beetroot-image-with-text-v2__step">
                        <span> 3 </span>
                        <div class="step__text">
                          {{ block.settings.third_step }}
                        </div>
                      </div>
                    {%- endunless -%}
                  {%- endunless -%}
                </div>
              {%- endunless -%}
          {%- endcase -%}
          <div></div>
        {%- endfor -%}
      </div>
    </div>
  </div>
{% endunless %}
{% schema %}
{
  "name": "Beetroot/Image with text",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "rgba(255, 235, 219, 0.5)"
    },
    {
      "type": "checkbox",
      "id": "add_icon",
      "label": "Add frontground icon",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding top(desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom(desktop)",
      "default": 90
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top(mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom(mobile)",
      "default": 40
    }
  ],
  "blocks": [
    {
      "name": "Title",
      "type": "title",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Title"
        }
      ]
    },
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Text</p>"
        }
      ]
    },
    {
      "name": "Steps",
      "type": "steps",
      "settings": [
        {
          "type": "color",
          "id": "accent_color",
          "label": "Accent color",
          "default": "#005EB8"
        },
        {
          "type": "richtext",
          "id": "first_step",
          "label": "First step",
          "default": "<p>First step</p>"
        },
        {
          "type": "richtext",
          "id": "second_step",
          "label": "Second step",
          "default": "<p>Second step</p>"
        },
        {
          "type": "richtext",
          "id": "third_step",
          "label": "Third step",
          "default": "<p>Third step</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Beetroot/Image with text v2"
    }
  ]
}
{% endschema %}
