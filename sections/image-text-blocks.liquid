{{ 'section-image-text-blocks.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

{%- style -%}
  .image-text-blocks--{{ section.id }} {
    --itb-background: {{ section.settings.background | default: 'transparent' }};
    --itb-grid-gap: {{ section.settings.grid_gap | default: 48 }}px;
    --itb-grid-gap-mobile: {{ section.settings.grid_gap_mobile | default: 32 }}px;
    --itb-block-gap: {{ section.settings.block_gap | default: 24 }}px;
    --itb-block-gap-mobile: {{ section.settings.block_gap_mobile | default: 20 }}px;
  }
{%- endstyle -%}

{%- if section.blocks.size > 0 -%}
  <section class="image-text-blocks image-text-blocks--{{ section.id }} section-{{ section.id }}--padding">
    <div class="page-width page-width--extra">
      <div class="image-text-blocks__grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'item' -%}
            {% liquid
              assign desktop_order = block.settings.desktop_order | default: 'text-first'
              assign mobile_order = block.settings.mobile_order | default: desktop_order

              if desktop_order == 'image-first'
                assign image_order = 1
                assign text_order = 2
              else
                assign image_order = 2
                assign text_order = 1
              endif

              if mobile_order == 'image-first'
                assign image_order_mobile = 1
                assign text_order_mobile = 2
              else
                assign image_order_mobile = 2
                assign text_order_mobile = 1
              endif
            %}

            {% capture block_styles %}
              --itb-subheading-color: {{ block.settings.subheading_color | default: '#ff6a13' }};
              --itb-subheading-bg: {{ block.settings.subheading_background | default: '#ffe5d3' }};
              --itb-subheading-size: {{ block.settings.subheading_size | default: 16 }}px;
              --itb-subheading-size-mobile: {{ block.settings.subheading_size_mobile | default: 14 }}px;

              --itb-heading-color: {{ block.settings.heading_color | default: '#0f172a' }};
              --itb-heading-size: {{ block.settings.heading_size | default: 32 }}px;
              --itb-heading-size-mobile: {{ block.settings.heading_size_mobile | default: 26 }}px;

              --itb-body-color: {{ block.settings.body_color | default: '#0f172a' }};
              --itb-body-size: {{ block.settings.body_size | default: 16 }}px;
              --itb-body-size-mobile: {{ block.settings.body_size_mobile | default: 15 }}px;

              --itb-body-strong-color: {{ block.settings.body_strong_color | default: '#0f172a' }};
              --itb-body-strong-size: {{ block.settings.body_strong_size | default: 16 }}px;
              --itb-body-strong-size-mobile: {{ block.settings.body_strong_size_mobile | default: 15 }}px;

              --itb-image-radius: {{ block.settings.image_radius | default: 0 }}px;
              --itb-image-width: {{ block.settings.image_width | default: 50 }}%;
              --itb-image-width-mobile: {{ block.settings.image_width_mobile | default: 100 }}%;
              {%- if block.settings.custom_gap -%}
                --itb-block-gap: {{ block.settings.block_gap | default: section.settings.block_gap | default: 24 }}px;
                --itb-block-gap-mobile: {{ block.settings.block_gap_mobile | default: section.settings.block_gap_mobile | default: 20 }}px;
              {%- endif -%}
              --itb-image-order: {{ image_order }};
              --itb-text-order: {{ text_order }};
              --itb-image-order-mobile: {{ image_order_mobile }};
              --itb-text-order-mobile: {{ text_order_mobile }};
            {% endcapture %}

            <article class="image-text-blocks__item" style="{{ block_styles | strip | strip_newlines }}" {{ block.shopify_attributes }}>
              {%- if block.settings.subheading != blank
                or block.settings.heading != blank
                or block.settings.body != blank
              -%}
                <div class="image-text-blocks__text">
                  {%- if block.settings.subheading != blank -%}
                    <p class="image-text-blocks__subheading">
                      <span>{{ block.settings.subheading }}</span>
                    </p>
                  {%- endif -%}
                  {%- if block.settings.heading != blank -%}
                    <h3 class="image-text-blocks__heading">{{ block.settings.heading | newline_to_br }}</h3>
                  {%- endif -%}
                  {%- if block.settings.body != blank -%}
                    <div class="image-text-blocks__body">
                      {{ block.settings.body }}
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}

              {%- if block.settings.image != blank -%}
                <div class="image-text-blocks__media">
                  <picture>
                    {%- if block.settings.image_mobile != blank -%}
                      <source media="(max-width: 749px)" srcset="{{ block.settings.image_mobile | image_url: width: 900 }}">
                    {%- endif -%}
                    {{
                      block.settings.image
                      | image_url: width: 1400
                      | image_tag:
                        loading: 'lazy',
                        alt: block.settings.image.alt
                    }}
                  </picture>
                </div>
              {%- endif -%}
            </article>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>
{%- endif -%}

{% schema %}
