                --cut-card-title-size-mobile: {{ block.settings.card_title_size_mobile | default: 16 }}px;

                --cut-card-icon-size: {{ block.settings.card_icon_size | default: 28 }}px;
                --cut-card-icon-size-mobile: {{ block.settings.card_icon_size_mobile | default: 24 }}px;

                --cut-card-body-color: {{ block.settings.card_body_color | default: '#0f172a' }};
                --cut-card-body-size: {{ block.settings.card_body_size | default: 16 }}px;
                --cut-card-body-size-mobile: {{ block.settings.card_body_size_mobile | default: 15 }}px;

