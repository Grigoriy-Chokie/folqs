<script>
  (() => {
    const sectionSelector = `.consistent-use-timeline--{{ section.id }}`;
    const updateLine = () => {
      const section = document.querySelector(sectionSelector);
      if (!section) return;
      const list = section.querySelector('.consistent-use-timeline__list');
      if (!list) return;
      const dots = list.querySelectorAll('.consistent-use-timeline__dot');
      if (!dots.length) return;

      const listRect = list.getBoundingClientRect();
      const firstRect = dots[0].getBoundingClientRect();
      const lastRect = dots[dots.length - 1].getBoundingClientRect();
      const start = Math.max(firstRect.top + firstRect.height / 2 - listRect.top, 0);
      const end = Math.max(listRect.bottom - (lastRect.top + lastRect.height / 2), 0);

      list.style.setProperty('--cut-line-start', `${start}px`);
      list.style.setProperty('--cut-line-end', `${end}px`);
    };

    const schedule = () => window.requestAnimationFrame(updateLine);

    const init = () => {
      const section = document.querySelector(sectionSelector);
      if (!section) return;
      schedule();

      if (section.dataset.cutLineBound === 'true') return;
      section.dataset.cutLineBound = 'true';

      if ('ResizeObserver' in window) {
        const observer = new ResizeObserver(schedule);
        const list = section.querySelector('.consistent-use-timeline__list');
        if (list) observer.observe(list);
      } else {
        window.addEventListener('resize', schedule);
      }

      document.addEventListener('shopify:section:load', (event) => {
        if (event.target && event.target.matches(sectionSelector)) {
          schedule();
        }
      });
      document.addEventListener('shopify:section:reorder', schedule);
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
    window.addEventListener('load', schedule);
  })();
</script>

