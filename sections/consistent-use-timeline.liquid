    {%- if section.settings.background_image_desktop != blank or section.settings.background_image_mobile != blank -%}
      <div class="consistent-use-timeline__bg" aria-hidden="true"></div>
    {%- endif -%}
    <div class="page-width page-width--extra">
      <div class="consistent-use-timeline__inner">
        {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
          <div class="consistent-use-timeline__header">
            {%- if section.settings.title != blank -%}
              <h2 class="consistent-use-timeline__title">{{ section.settings.title }}</h2>
            {%- endif -%}
            {%- if section.settings.subtitle != blank -%}
              <div class="consistent-use-timeline__subtitle">
                {{ section.settings.subtitle }}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}

        <div class="consistent-use-timeline__list">
          {%- for block in section.blocks -%}
            {%- if block.type == 'step' -%}
              {% capture block_styles %}
                --cut-label-color: {{ block.settings.label_color | default: '#0f172a' }};
                --cut-label-size: {{ block.settings.label_size | default: 22 }}px;
                --cut-label-size-mobile: {{ block.settings.label_size_mobile | default: 18 }}px;
