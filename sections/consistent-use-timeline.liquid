                --cut-label-offset: {{ block.settings.label_offset | default: 0 }}px;
                --cut-label-offset-mobile: {{ block.settings.label_offset_mobile | default: 0 }}px;

                --cut-card-bg: {{ block.settings.card_background | default: '#ffffff' }};
                --cut-card-border-color: {{ block.settings.card_border_color | default: '#d6d6d6' }};
                --cut-card-border-width: {{ block.settings.card_border_width | default: 1 }}px;
                --cut-card-radius: {{ block.settings.card_radius | default: 14 }}px;
                --cut-card-padding: {{ block.settings.card_padding | default: 20 }}px;
                --cut-card-padding-mobile: {{ block.settings.card_padding_mobile | default: 18 }}px;
                --cut-card-offset: {{ block.settings.card_offset | default: 0 }}px;
                --cut-card-offset-mobile: {{ block.settings.card_offset_mobile | default: 0 }}px;
