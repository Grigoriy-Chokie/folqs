<svg width="200" height="500">
  <rect
    class="rectangle-border"
    width="100%"
    height="100%"
    rx="20"
    ry="20"
    stroke-opacity="0.2"
    stroke-width="3"
    fill="transparent"
    stroke="#005EB8"
  />
  <rect
    style="--duration: {{speedAnim}}s"
    class="rectangle-progress"
    width="100%"
    height="100%"
    rx="20"
    ry="20"
    stroke-dasharray="1500"
    stroke-width="3"
    fill="transparent"
    stroke="#005EB8"
  />
</svg>
