<svg class="progress-bar--active" xmlns="http://www.w3.org/2000/svg" width="226" height="2" viewBox="0 0 226 2" fill="none">
    <rect width="226" height="2" fill="#005EB8" fill-opacity="0.2"/>
    <rect class="progress-bar__line   {% if index == 1 %} progress-bar__line--active {% endif %}" style="--duration: {{time | times: 1200 }}ms" width="0" height="2" fill="#005EB8"/>
  </svg>
  <svg class = "progress-bar--disabled"xmlns="http://www.w3.org/2000/svg" width="226" height="2" viewBox="0 0 226 2" fill="none">
    <rect width="226" height="2" fill="#F1F1F1"/>
  </svg>

