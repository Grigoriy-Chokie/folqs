{%- comment -%}
{%- render 'component-image', image: image, image_url_width: 1920, loading: 'eager/lazy/hight', fetchpriority: 'hight/low', image_class: 'class' -%}
{%- endcomment -%}
{%- if image != blank -%}
  {%- liquid
    if fetchpriority == blank
      assign fetchpriority = 'low'
    endif
    if loading == blank
      assign loading = 'lazy'
    endif
    assign image_alt = image.alt | default: shop.name | escape
  -%}

  {{ image | image_url: width: image_url_width | image_tag:
    class: image_class,
    alt: image_alt,
    fetchpriority: fetchpriority,
    width: image_width,
    loading: loading }}
{%- endif -%}